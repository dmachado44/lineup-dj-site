rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to shared_lineups collection
    match /shared_lineups/{documentId} {
      allow read: if true;  // Anyone can read shared lineups
      allow create: if request.resource.data.keys().hasAll(['lineup', 'expires_at']) 
                   && request.resource.data.expires_at is timestamp;  // Validate required fields
      allow update, delete: if false; // No one can update or delete shared lineups
    }
    
    // Deny access to all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 